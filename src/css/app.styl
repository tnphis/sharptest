$app = sharptest
$header_height = 45px
$header_padding = 12px
$footer_height = 60px
$footer_padding = 11px

/*Main definitions*/
.{$app}-main
	margin-bottom: $footer_height
	margin-top: $header_height
	padding-top: 20px

.{$app}-footer
	position: fixed
	bottom: 0
	height: $footer_height
	width: 100%
	border-top: 1px solid #ddd
	padding-top: $footer_padding
	background-color: white
	text-align: center
	color: #999
	z-index: 10000

.{$app}-header
	position: fixed
	top: 0
	left: 0
	height: $header_height
	padding-top: $header_padding
	width: 100%
	border-bottom: 1px solid #ddd
	background-color: white
	z-index: 10000

.{$app}-mb
	margin-bottom: 15px

/*App header elements*/
.{$app}-header-name
	display: inline-block
	margin-left: 20px
	color: #aaa

.{$app}-header-balance
	display: inline-block
	margin-left: 30px

.{$app}-header-logout
	float: right
	margin-top: -5px
	margin-right: 7px

/*Tabs*/
.{$app}-tab
	cursor: pointer

