$app = sharptest
$header_height = 45px
$header_padding = 12px
$footer_height = 60px
$footer_padding = 11px

/*Main definitions*/
.{$app}-main
	margin-bottom: $footer_height
	margin-top: $header_height
	padding-top: 20px

.{$app}-footer
	position: fixed
	bottom: 0
	height: $footer_height
	width: 100%
	border-top: 1px solid #ddd
	padding-top: $footer_padding
	background-color: white
	text-align: center
	color: #999
	z-index: 1000

.{$app}-header
	position: fixed
	top: 0
	left: 0
	height: $header_height
	padding-top: $header_padding
	width: 100%
	border-bottom: 1px solid #ddd
	background-color: white
	z-index: 1000

.{$app}-mb
	margin-bottom: 15px

/*Loading indicator*/
.{$app}-loading-screen
	position: absolute
	width: 100%
	height: 100%
	left: 0
	top: 0
	bottom: 0
	right: 0
	text-align: center
	z-index: 1001
	background: #eee

.{$app}-loading-element
	position: absolute;
	top: 50%;
	left: 50%;
	transform: translate(-50%, -50%);
	color: darkblue
	font-size: 24px

/*App header elements*/
.{$app}-header-name
	display: inline-block
	margin-left: 20px
	color: #aaa

.{$app}-header-balance
	display: inline-block
	margin-left: 30px

.{$app}-header-logout
	float: right
	margin-top: -5px
	margin-right: 7px

/*Tabs*/
.{$app}-tab
	cursor: pointer

/*Seems to be something wrong with the default css from the bower package*/
table.dataTable tbody tr.odd {
	background-color: #f9f9f9
}

table.dataTable tbody tr td {
	padding: 3px
	border: 1px solid #eee
}

